<!--pages/PM/traOrgReview/traOrgReview.wxml-->
<view class="Container">
    <view>
        <!-- show 的值绑定到提交按钮的返回值。 -->
        <mp-toptips msg="{{success}}" type="{{topStatus}}" show="{{show}}"></mp-toptips>
    </view>
    <view class="formContainer">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="formItems">
                <view>
                    <text>车牌号</text>
                    <input type="number" name="number" placeholder="例如：豫A00001"></input>
                </view>
                <view>
                    <text>负责人</text>
                    <input type="text" name="name" placeholder="例如：张三"></input>
                </view>
                <view>
                    <text>队别</text>
                    <input type="text" name="name" placeholder="例如：消防总队"></input>
                </view>
            </view>
            <view class="button">
                <button form-type="reset" style="background-color: #939393">清除</button>
                <button form-type="submit" style="background-color: #8DE">查询</button>
            </view>
        </form>
    </view>
    <view class="table">
        <view class="tr bg-w">
            <view class="th">负责人</view>
            <view class="th">主管单位</view>
            <view class="th">车型</view>
            <view class="th">车牌号</view>
            <view class="th">车况</view>
        </view>
        <block wx:for="{{revCarList}}" wx:key="index">
            <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
                <view class="td">{{item.headName}}</view>
                <view class="td">{{item.carCompany}}</view>
                <view class="td">{{item.carBrand}}-{{item.carModel}}</view>
                <view class="td font11">{{item.carLicenseplate}}</view>
                <view class="td color-0cf" wx:if="{{item.review == 0}}" data-id="{{item.carId}}"  bindtap="changeRev">
                    未审查
                </view>

            </view>
            <view class="tr" wx:else>
                <view class="td">{{item.headName}}</view>
                <view class="td">{{item.carCompany}}</view>
                <view class="td">{{item.carBrand}}-{{item.carModel}}</view>
                <view class="td">{{item.carLicenseplate}}</view>
                <view class="td color-0cf" wx:if="{{item.review == 0}}" data-id="{{item.carId}}"  bindtap="changeRev">
                    未审查
                </view>
            </view>
        </block>
    </view>
</view>
