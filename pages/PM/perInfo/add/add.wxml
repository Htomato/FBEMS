<!--pages/PM/contacts/add/add.wxml-->
<view class="container">
    <view>
        <!-- show 的值绑定到提交按钮的返回值。 -->
        <mp-toptips msg="{{success}}" type="{{topStatus}}" show="{{show}}"></mp-toptips>
    </view>
    <view class="bg-fff p-lr30 border-t">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40" >姓名:</view>
                    <input type="text" name="driverName" placeholder="请输入驾驶人姓名" placeholder-class="tx-left" focus="true">></input>
                </view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40">年龄:</view>
                    <input type="number" name="driverAge" placeholder="请输入年龄" placeholder-class="tx-left"> </input>
                </view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40">单位:</view>
                    <input type="number" name="driverCompany" placeholder="请输入驾驶员单位" placeholder-class="tx-left"> </input>
                </view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40">驾驶证编号:</view>
                    <input type="number" name="licenseNumber" placeholder="请输入驾驶证编号(可空)" placeholder-class="tx-left"> </input>
                </view>
                <view class="ipt-wrap flex-row ai-center">
                    <text class="font14 mr40">申请类型:</text>
                    <radio-group bindchange="licenseTypeRadio" class="flex-vertical-center">
                        <radio class="ml5" wx:for-items="{{licenseTypeRadio}}" wx:key="name" value="{{item.name}}">
                            <view class="as-center">{{item.value}}</view>
                        </radio>
                    </radio-group>
                </view>
            </view>
            <button form-type="reset" class="font16 _w100 bg-c9c9c9 color-fff combtn resetBtn" style="padding: 0 0;">清空</button>
            <button form-type="submit" class="font16 _w100 bg-btn color-fff combtn subBtn" style="padding: 0 0;">添加</button>
        </form>
    </view>
</view>


