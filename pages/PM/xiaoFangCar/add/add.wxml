<!--pages/PM/contacts/add/add.wxml-->
<view class="container">
    <view>
        <!-- show 的值绑定到提交按钮的返回值。 -->
        <mp-toptips msg="{{success}}" type="{{topStatus}}" show="{{show}}"></mp-toptips>
    </view>
    <view class="bg-fff p-lr30 border-t">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40" >负责人:</view>
                    <input type="text" name="headName" placeholder="请输入负责人姓名" placeholder-class="tx-left" focus="true">></input>
                </view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40">电话:</view>
                    <input type="number" name="headTele" placeholder="请输入负责人号码" placeholder-class="tx-left"> </input>
                </view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40">单位:</view>
                    <input type="number" name="headCompany" placeholder="请输入负责人单位" placeholder-class="tx-left"> </input>
                </view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40">驾驶证编号:</view>
                    <input type="number" name="headCard" placeholder="请输入负责人驾驶证编号" placeholder-class="tx-left"> </input>
                </view>



                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40">车辆单位:</view>
                    <input type="text" name="carCompany" placeholder="请输入车辆所属单位" placeholder-class="tx-left"> </input>
                </view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40">车辆品牌:</view>
                    <input type="text" name="carBrand" placeholder="请输入车辆品牌" placeholder-class="tx-left"> </input>
                </view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40">车辆型号:</view>
                    <input type="text" name="carModel" placeholder="请输入车辆型号" placeholder-class="tx-left"> </input>
                </view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40">车辆来源:</view>
                    <radio-group bindchange="carSourceRadio">
                        <radio class="ml5" wx:for-items="{{items}}" wx:key="name" value="{{item.name}}">
                            <text>{{item.value}}</text>
                        </radio>
                    </radio-group>
                </view>

                <view class="ipt-wrap border-b flex-row ai-center">
                    <view class="font14 mr40">车辆类别:</view>
                    <radio-group bindchange="carCategoryRadio">
                        <radio class="ml5" wx:for-items="{{items}}" wx:key="name" value="{{item.name}}">
                            <text>{{item.value}}</text>
                        </radio>
                    </radio-group>
                </view>


            </view>
            <button form-type="reset" class="font16 _w100 bg-c9c9c9 color-fff combtn resetBtn" style="padding: 0 0;">清空</button>
            <button form-type="submit" class="font16 _w100 bg-btn color-fff combtn subBtn" style="padding: 0 0;">添加</button>
        </form>
    </view>
</view>


