<!--pages/PM/contacts/contacts.wxml-->
<view>
    <view>
        <!-- show 的值绑定到提交按钮的返回值。 -->
        <mp-toptips msg="{{success}}" type="{{topStatus}}" show="{{show}}"></mp-toptips>
    </view>
    <view>
        <mp-searchbar bindselectresult="selectResult" bindhideInput="hideInput" search="{{search}}"></mp-searchbar>
    </view>
  <block wx:for="{{contacts}}" wx:key="index">
      <mp-slideview class="contact"
                    buttons="{{slideButtons}}"
                    bindbuttontap="slideButtonTap"
            bind:touchstart="touchstart"
            bind:touchend="touchend"
            bind:longtap="change"
            bindtap="call"
            data-teleNum="{{item.contactTele}}"
            data-id="{{item.contactId}}">
          <view class="flex-row">
              <image src="{{item.avatar}}" class="avatar"></image>
              <text class=" flex-horizontal-start contact_name ai-center">{{item.contactName}}</text>
              <view class="flex-horizontal-start ai-center w200 m-lr10">
                  <text class="key">单位：</text>
                  <text class="value">{{item.company}}</text>
              </view>
              <view class="flex-horizontal-start ai-center w200">
                  <text class="key">单位：</text>
                  <text class="value">{{item.company}}</text>
              </view>

          </view>
      </mp-slideview>
  </block>

  <view class="addwrap" bindtap="addContact">
      <image src="/images/icon_bar/add.png"></image>   
  </view> 
</view>