<!--pages/PM/contacts/add/add.wxml-->
<view class="container">
  <view>
    <!-- show 的值绑定到提交按钮的返回值。 -->
    <mp-toptips msg="{{success}}" type="{{topStatus}}" show="{{show}}"></mp-toptips>
  </view>
  <view class="bg-fff p-lr30 border-t">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view> 

        <view class="ipt-wrap border-b flex-row ai-center">
          <view class="font14 mr20" >姓名:</view>
          <input type="text" name="name" placeholder="请输入姓名" placeholder-class="tx-center" focus="true">></input>
        </view>

        <view class="ipt-wrap border-b flex-row ai-center">
          <view class="font14 mr20">电话:</view>
          <input type="number" name="tele" placeholder="请输入号码" placeholder-class="tx-center"> </input>          
        </view>


        <view class="ipt-wrap border-b flex-row ai-center">
          <view class="font14 mr20">单位:</view>
          <input type="text" name="company" placeholder="请输入单位" placeholder-class="tx-center"> </input>          
        </view>

        <view class="ipt-wrap border-b flex-row ai-center">
          <view class="font14 mr20 ">职务:</view>
          <input type="text" name="job" placeholder="请输入职务" placeholder-class="tx-center"></input>
        </view>
      </view>
      <button form-type="reset" class="font16 _w100 bg-c9c9c9 color-fff combtn resetBtn">清空</button>
      <button form-type="submit" class="font16 _w100 bg-btn color-fff combtn subBtn">添加</button>
    </form>
  </view>
</view>


