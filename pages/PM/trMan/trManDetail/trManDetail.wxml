
<view class="page bg-fff">
    <view class="weui-form">
        <view class="weui-form__text-area">
            <h2 class="weui-form__title">成绩单</h2>
        </view>
        <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-flex flex-row">
            <view class="weui-cells__title">姓名：{{name}}</view>
            <view class="weui-cells__title ml50">单位：{{trmanCompany}}</view>
            </view>
            <view class="weui-cells weui-cells_after-title">
                <block wx:for="{{trmanGrades}}" wx:key="index">
                    <view class="weui-cell">
                        <view class="weui-cell__bd">{{item.type}}</view>
                        <view class="weui-cell__ft {{item.grade<60?'color-ff0000':'color-363636'}}">{{item.grade}}</view>
                    </view>
                </block>
            </view>

            </view>
        </view>
    </view>
