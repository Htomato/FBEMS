<view class="Container">
    <view class="formContainer">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="formItems">
                <view>
                    <text>下级单位</text>
                    <input type="text" name="carCompany" placeholder="例如：消防一队"></input>
                </view>
                <view class="ipt-wrap flex-row ai-center">
                    <text class="font14 mr40">车辆类别:</text>
                    <radio-group bindchange="carCategoryRadio">
                        <radio class="ml5" wx:for-items="{{carCategoryRadio}}" wx:key="name" value="{{item.name}}">
                            <view>{{item.value}}</view>
                        </radio>
                    </radio-group>
                </view>
            </view>
            <view class="button">
                <button form-type="reset" style="background-color: #939393">清除</button>
                <button form-type="submit" style="background-color: #8DE">查询</button>
            </view>
        </form>
    </view>
    <view class="table">
        <view class="tr bg-w">
            <view class="th w100">编号</view>
            <view class="th">负责人</view>
            <view class="th">所属队别</view>
            <view class="th">车辆型号</view>
            <view class="th">车辆类别</view>
        </view>
        <block wx:for="{{underList}}" wx:key="index">
            <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
                <view class="td">{{item.carId}}</view>
                <view class="td">{{item.headName}}</view>
                <view class="td">{{item.headCompany}}</view>
                <view class="td font11">{{item.carBrand}}-{{item.carModel}}</view>
                <view class="td font11">{{item.carCategory}}</view>
            </view>
            <view class="tr" wx:else>
                <view class="td">{{item.carId}}</view>
                <view class="td">{{item.headName}}</view>
                <view class="td">{{item.headCompany}}</view>
                <view class="td font11">{{item.carBrand}}-{{item.carModel}}</view>
                <view class="td font11">{{item.carCategory}}</view>
            </view>
        </block>
    </view>
</view>