<view class="Container">
    <view>
        <!-- show 的值绑定到提交按钮的返回值。 -->
        <mp-toptips msg="{{success}}" type="{{topStatus}}" show="{{show}}"></mp-toptips>
    </view>
    <view class="formContainer">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="formItems">
                <view>
                    <text>车牌号</text>
                    <input type="text" name="carLicenseplate" placeholder="例如：豫A00001"></input>
                </view>
                <view>
                    <text>负责人</text>
                    <input type="text" name="headName" placeholder="例如：张三"></input>
                </view>
            </view>
            <view class="button">
                <button form-type="reset" style="background-color: #939393">清除</button>
                <button form-type="submit" style="background-color: #8DE">查询</button>
            </view>
        </form>
    </view>
    <view class="table">
        <view class="tr bg-w">
            <view class="th w100">编号</view>
            <view class="th">负责人</view>
            <view class="th">所属队别</view>
            <view class="th">车辆型号</view>
            <view class="th">车牌号</view>
        </view>
        <block wx:for="{{AdminCarList}}" wx:key="index">
            <view class="tr bg-g" wx:if="{{index % 2 == 0}}" data-id="{{item.carId}}"  data-licensePlat="{{item.carLicenseplate}}"  bindtap="changeLicense">
                <view class="td">{{item.carId}}</view>
                <view class="td">{{item.headName}}</view>
                <view class="td">{{item.headCompany}}</view>
                <view class="td">{{item.carBrand}}-{{item.carModel}}</view>
                <view class="td font11" wx:if="{{item.carLicenseplate == null}}">新车</view>
                <view class="td font11" wx:else>{{item.carLicenseplate}}</view>
            </view>
            <view class="tr" wx:else data-id="{{item.carId}}" data-license="{{item.carLicenseplate}}" bindtap="changeLicense">
                <view class="td">{{item.carId}}</view>
                <view class="td">{{item.headName}}</view>
                <view class="td">{{item.headCompany}}</view>
                <view class="td">{{item.carBrand}}-{{item.carModel}}</view>
                <view class="td font11" wx:if="{{item.carLicenseplate == null}}">新车</view>
                <view class="td font11" wx:else>{{item.carLicenseplate}}</view>
            </view>
        </block>
    </view>
    <!--添加按钮-->
    <view class="addwrap" bindtap="addXingZhengCar">
        <image src="/images/icon_bar/add.png"></image>
    </view>
</view>