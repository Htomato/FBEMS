<!--pages/PM/contacts/add/add.wxml-->
<view class="page bg-fff">
    <view>
        <!-- show 的值绑定到提交按钮的返回值。 -->
        <mp-toptips msg="{{success}}" type="{{topStatus}}" show="{{show}}"></mp-toptips>
    </view>
    <view class="weui-form">
        <view>
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-cells weui-cells_form">
                <view class="weui-cell">
                    <view class="weui-cell__hd">
                        <label class="weui-label" >姓名:</label>
                    </view>
                    <view class="weui-cell-bd">
                        <input class="weui-input" type="text" name="eqexpertName" placeholder="请输入姓名" placeholder-class="weui-input__placeholder" focus="true"></input>
                    </view>
                </view>

                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd">
                        <label class="weui-label">单位:</label>
                    </view>
                    <view class="weui-cell__bd">
                        <input type="text" class="weui-input" name="eqexpertCompany" placeholder="请输入单位" placeholder-class="weui-input__placeholder"> </input>
                    </view>
                </view>
                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd">
                        <label class="weui-label">职称:</label>
                    </view>
                    <view class="weui-cell-bd">
                        <input class="weui-input" type="text" name="eqexpertQua" placeholder="请输入职称" placeholder-class="weui-input__placeholder"></input>
                    </view>
                </view>

                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd">
                        <label class="weui-label">领域:</label>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" type="text" name="eqexpertDomain" placeholder="请输入专家负责领域" placeholder-class="weui-input__placeholder"></input>
                    </view>

                </view>


                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd">
                        <label class="weui-label">详情:</label>
                    </view>
                    <view class="weui-cell__bd">
                        <textarea class="weui-textarea" name="eqexpertDetail" placeholder="请输入专家详细信息" rows="3"></textarea>
                    </view>
                </view>
                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd">
                        <label class="weui-label">资质:</label>
                    </view>
                    <view class="weui-cell__bd">
                        <button class="weui-btn weui-btn_default" bindtap="quaImgUpload">上传资格证书</button>                    </view>
                    </view>
                <view>

                </view>
            </view>
            <button form-type="reset" class="font16 _w100 bg-c9c9c9 color-fff combtn resetBtn" style="padding: 0 0;">清空</button>
            <button form-type="submit" class="font16 _w100 bg-btn color-fff combtn subBtn" style="padding: 0 0;">添加</button>
            </view>
        </form>
    </view>
    </view>
</view>


