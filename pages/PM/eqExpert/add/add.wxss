.ipt-wrap{
    min-height: 100rpx;
    line-height: 100rpx;
}
.b0-fixed{
    bottom: 0;
    position: fixed;
}

.combtn{
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    margin: 0 auto;
    border-radius: 5rpx;
    position: fixed;
    bottom: 0;
    left: 50%;
}
.resetBtn{
    transform: translateX(-100%);
}
.subBtn{
    transform: translateX(0);
}

.page{
    height:100%

}
.weui-label{
    width:4.1em
}
.weui-form {
    padding: 0px 0 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
    flex-direction: column;
    min-height: 100%;
    box-sizing: border-box;
    line-height: 1.4;
    background-color: #fff;
}