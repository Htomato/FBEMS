<view class="Container">
    <view class="formContainer">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="formItems">
                <view>
                    <text>驾驶员</text>
                    <input type="text" name="name" placeholder="例如：张三"></input>
                </view>
                <view>
                    <text>所属单位</text>
                    <input type="text" name="name" placeholder="例如：消防一队"></input>
                </view>
            </view>
            <view class="button">
                <button form-type="reset" style="background-color: #939393">清除</button>
                <button form-type="submit" style="background-color: #8DE">查询</button>
            </view>
        </form>
    </view>
    <view class="table">
        <view class="tr bg-w">
            <view class="th">姓名</view>
            <view class="th">单位</view>
            <view class="th">牌照类别</view>
            <view class="th">年审信息</view>
        </view>
        <block wx:for="{{drivList}}" wx:key="index">
            <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
                <view class="td">{{item.driverName}}</view>
                <view class="td">{{item.driverCompany}}</view>
                <view class="td">{{item.licenseType}}</view>
                <view class="td value">
                    <view  hover-class="navigator-hover" bindtap="details"
                           data-id="{{item.driverId}}">
                        查看
                    </view>
                </view>
            </view>
            <view class="tr" wx:else>
                <view class="td">{{item.driverName}}</view>
                <view class="td">{{item.driverCompany}}</view>
                <view class="td">{{item.licenseType}}</view>
                <view class="td value">
                    <view  hover-class="navigator-hover" bindtap="details"
                           data-id="{{item.driverId}}">
                        查看
                    </view>
                </view>
            </view>
        </block>
    </view>
</view>
