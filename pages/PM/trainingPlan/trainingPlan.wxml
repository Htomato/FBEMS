<!--pages/PM/trainingPlan/trainingPlan.wxml-->
<view class="Container">
  <view class="formContainer">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="formItems">
        <view>
          <text>方案编号</text>
          <input type="number" name="number" placeholder="例如：001"></input>
        </view>
        <view>
          <text>培训机构</text>
          <input type="text" name="name" placeholder="例如：锐顿"></input>
        </view>
        <view>
          <text>培训类别</text>
          <picker bindchange="pickerChange" name="selectValue" value="{{index}}" range="{{objectArray}}" range-key="{{'name'}}">
            <view>{{objectArray[index].name}}</view>
          </picker>
        </view>

      </view>
      <view class="button">
        <button form-type="reset" style="background-color: #939393">清除</button>
        <button form-type="submit" style="background-color: #8DE">查询</button>
      </view>
    </form>
  </view>
  <view class="table">
    <view class="tr bg-w">
      <view class="th">方案编号</view>
      <view class="th">培训机构</view>
      <view class="th">培训类别</view>
    </view>
    <block wx:for="{{trplan}}" wx:key="code">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
        <view class="td">{{index+1}}</view>
        <view class="td">{{item.trorg}}</view>
        <view class="td value">
          <view  hover-class="navigator-hover" bindtap="navigator"
                 data-content="{{item.trplancontent}}" data-trorg="{{item.trorg}}" data-type="{{item.trplantype}}">
            {{item.trplantype}}
          </view>
        </view>
      </view>
      <view class="tr" wx:else>
        <view class="td">{{index+1}}</view>
        <view class="td">{{item.trorg}}</view>
        <view class="td value">
          <view  hover-class="navigator-hover" bindtap="navigator"
                 data-content="{{item.trplancontent}}" data-trorg="{{item.trorg}}" data-type="{{item.trplantype}}">
            {{item.trplantype}}
          </view>
        </view>
      </view>
    </block>
  </view>
</view>