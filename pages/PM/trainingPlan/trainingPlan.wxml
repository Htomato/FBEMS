<!--pages/PM/trainingPlan/trainingPlan.wxml-->
<view class="Container">
  <view class="formContainer">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="formItems">
        <view>
          <text>方案编号</text>
          <input type="number" name="number" placeholder="例如：001"></input>
        </view>
        <view>
          <text>培训机构</text>
          <input type="text" name="name" placeholder="例如：锐顿"></input>
        </view>
        <view>
          <text>培训类别</text>
          <radio-group bindchange="trplantypeSelectRadio" >
            <radio class="ml5" wx:for-items="{{trplantypeRadio}}" wx:key="name" value="{{item.name}}">
              <view class="ai-center">{{item.value}}</view>
            </radio>
          </radio-group>
        </view>

      </view>
      <view class="button">
        <button form-type="reset" style="background-color: #939393">清除</button>
        <button form-type="submit" style="background-color: #8DE">查询</button>
      </view>
    </form>
  </view>
  <view class="table">
    <view class="tr bg-w">
      <view class="th">方案编号</view>
      <view class="th">培训机构</view>
      <view class="th">培训类别</view>
    </view>
    <block wx:for="{{trplan}}" wx:key="index">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}"
            bind:touchstart="touchstart"
            bind:touchend="touchend"
            bind:longtap="delete"
            data-id="{{item.trplanId}}"
      >
        <view class="td">{{item.trplanId}}</view>
        <view class="td">{{item.trorg}}</view>
        <view class="td value">
          <view  hover-class="navigator-hover"
                 bindtap="navigator"
                 data-content="{{item.trplancontent}}"
                 data-trorg="{{item.trorg}}"
                 data-type="{{item.trplantype}}"
                 data-goal="{{item.trplangoal}}"
          >
            {{item.trplantype}}
          </view>
        </view>
      </view>
      <view class="tr" wx:else
            bind:touchstart="touchstart"
            bind:touchend="touchend"
            bind:longtap="delete"
            data-id="{{item.trplanId}}"
      >
        <view class="td">{{item.trplanId}}</view>
        <view class="td">{{item.trorg}}</view>
        <view class="td value">
          <view  hover-class="navigator-hover"
                 bindtap="navigator"
                 data-content="{{item.trplancontent}}"
                 data-trorg="{{item.trorg}}"
                 data-type="{{item.trplantype}}"
                 data-goal="{{item.trplangoal}}"
          >
            {{item.trplantype}}
          </view>
        </view>
      </view>
    </block>
  </view>
  <view class="addwrap" bindtap="addTraPlan">
    <image src="/images/icon_bar/add.png"></image>
  </view>
</view>