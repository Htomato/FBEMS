/* pages/PM/trainingPlan/trainingPlan.wxss */
page{
  display: flex;

}

.formContainer{
  width: 100%;
  background-color: #f8f8f8;
}
.formItems{
  margin-top: 40rpx;
  align-items: center;
}
.formItems view{
  display: flex;
  margin-bottom: 20rpx;
}
.formItems input{
  height: 50rpx;
  background-color: white;
  margin-left: 20rpx;
}
.formItems text{
  width: 160rpx;
  height: 50rpx;
  text-align: center;
  border: 1px solid #999;
}
.selectItems{
  flex-direction: column;
  margin-left:100rpx; 
}
/* selector 显示的文本样式 */
picker{
  width: 60px;
  height: 30px;
  margin-left: 20rpx;
  border-bottom: 3rpx solid;  
}
.button{
  display: flex;
  flex-direction: row;
}
