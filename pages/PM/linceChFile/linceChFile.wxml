<view class="Container">
    <view class="formContainer">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="formItems">
                <view>
                    <text>原车牌号</text>
                    <input type="text" name="carLicenseplateold" placeholder="例如：豫A00001"></input>
                </view>
                <view>
                    <text>现车牌号</text>
                    <input type="text" name="carLicenseplate" placeholder="例如：豫A00002"></input>
                </view>
                <view>
                    <text>负责人</text>
                    <input type="text" name="headName" placeholder="例如：张三"></input>
                </view>
            </view>
            <view class="button">
                <button form-type="reset" style="background-color: #939393">清除</button>
                <button form-type="submit" style="background-color: #8DE">查询</button>
            </view>
        </form>
    </view>
    <view class="table">
        <view class="tr bg-w">
            <view class="th">负责人</view>
            <view class="th">车型</view>
            <view class="th">原车牌号</view>
            <view class="th">现车牌号</view>
        </view>
        <block wx:for="{{changeList}}" wx:key="index">
            <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
                <view class="td">{{item.headName}}</view>
                <view class="td">{{item.carBrand}}-{{item.carModel}}</view>
                <view class="td">{{item.carLicenseplateold}}</view>
                <view class="td">{{item.carLicenseplate}}</view>
            </view>
            <view class="tr" wx:else>
                <view class="td">{{item.headName}}</view>
                <view class="td">{{item.carBrand}}-{{item.carModel}}</view>
                <view class="td">{{item.carLicenseplateold}}</view>
                <view class="td">{{item.carLicenseplate}}</view>
            </view>
        </block>
    </view>
</view>