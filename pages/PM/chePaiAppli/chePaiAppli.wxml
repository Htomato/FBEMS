<view class="Container">
    <view class="formContainer">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="formItems">
                <view>
                    <text>车辆品牌</text>
                    <input type="text" name="carBrand" placeholder="例如：解放"></input>
                </view>
                <view>
                    <text>主管单位</text>
                    <input type="text" name="carCompany" placeholder="例如：消防总队"></input>
                </view>
            </view>
            <view class="button">
                <button form-type="reset" style="background-color: #939393">清除</button>
                <button form-type="submit" style="background-color: #8DE">查询</button>
            </view>
        </form>
    </view>
    <view class="table">
        <view class="tr bg-w">
            <view class="th">申请车辆</view>
            <view class="th">主管单位</view>
            <view class="th">审核状态</view>
            <view class="th">车辆来源</view>
            <view class="th">车辆类别</view>
        </view>
        <block wx:for="{{newList}}" wx:key="index">
            <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
                <view class="td">{{item.carBrand}}-{{item.carModel}}</view>
                <view class="td">{{item.carCompany}}</view>
                <view class="td color-0cf" data-id="{{item.carId}}"  bindtap="changeStatus">待审核</view>
                <view class="td">{{item.carSource}}</view>
                <view class="td">{{item.carCategory}}</view>
            </view>
            <view class="tr" wx:else>
                <view class="td">{{item.carBrand}}-{{item.carModel}}</view>
                <view class="td">{{item.carCompany}}</view>
                <view class="td color-0cf" data-id="{{item.carId}}"  bindtap="changeStatus">待审核</view>
                <view class="td">{{item.carSource}}</view>
                <view class="td">{{item.carCategory}}</view>
            </view>
        </block>
    </view>
</view>